<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.TextFlow ?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.shape.Line?>

<VBox fx:id="mainPanel" styleClass="vbox-class" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.helloword1.HelloController">
        <HBox styleClass="hbox-class" fx:id="header">
            <Button styleClass="headerButton" fx:id="btnSettings"/>
            <Button styleClass="headerButton" fx:id="btnUser"/>
            <Button styleClass="headerButton" fx:id="btnTrophy"/>
            <Button styleClass="headerButton" fx:id="btnPower"/>
        </HBox>
        <Pane styleClass="pane-class" fx:id="divider"></Pane>
        <VBox styleClass="vbox-class" fx:id="main">
            <HBox styleClass="hbox-class" fx:id="touchPanel">
                <VBox styleClass="vbox-class" fx:id="leftTouchPanel">
                    <Label styleClass="label-class" fx:id="lblTouchTiltle">
                        TOUCH ENABLED
                    </Label>
                    <TextFlow fx:id="tfTouchText">
                        <Text fx:id="txtTouchText">
                            Called 3D touch, the new technology can sense pressure.
                        </Text>
                    </TextFlow>
                </VBox>
                <HBox styleClass="hbox-class" fx:id="rightTouchPanel">
                    <Button fx:id="btnToggle" />
                    <Label fx:id="lblToggle" text="On" />
                </HBox>
            </HBox>

            <HBox styleClass="hbox-class" fx:id="autoPanel">
                <VBox styleClass="vbox-class" fx:id="leftAutoPanel">
                    <Label styleClass="label-class" fx:id="lblAutoTiltle">
                        AUTO-SUBSCRIBE
                    </Label>
                    <TextFlow fx:id="tfAutoText">
                        <Text fx:id="txtAutoText">
                            Called 3D touch, the new technology can sense pressure.
                        </Text>
                    </TextFlow>
                </VBox>
                <HBox styleClass="hbox-class" fx:id="rightAutoPanel">
                    <Button fx:id="btnToggleA" />
                    <Label fx:id="lblToggleA" text="On" />
                </HBox>
            </HBox>
            <Line startX="200" startY="0" endX="400" endY="0" fx:id="line"/>
        </VBox>
    </VBox>
